<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <h1><%= title %></h1>
    <div id="alert"></div>
    <form id="link-form" method="POST" action="/links/">
      <label for="link-url">Url</label>
      <input id="link-url" type="text" name="url" />
      <br />
      <label for="link-title">Title</label>
      <input id="link-title" type="text" name="title" />
      <br />
      <label for="link-description">Description</label>
      <input id="link-description" type="text" name="description" />
      <br />
      <input type="submit" value="Submit" />
    </form>
  </body>
  <script>
    // on form submit
    document.getElementById("link-form").addEventListener("submit", function(event) {
      event.preventDefault();

      console.log("on submit form");
      var link = {
        url: document.getElementById("link-url").value,
        title: document.getElementById("link-title").value,
        description: document.getElementById("link-description").value,
      }

      // ajax
      var xhr = new XMLHttpRequest();

      xhr.open('POST', '/links/');
      xhr.setRequestHeader('Content-Type', 'application/json');
      xhr.onload = function() {
        if (xhr.status === 200) {
          // success
          document.getElementById("alert").innerHTML = "<p>Success! Here's your shortened link.</p><h2>http://phys.ly/" + JSON.parse(xhr.responseText).slug + "</h2>"
          console.log("success");
          console.log(xhr.responseText);
        }
        else {
          // failure
          document.getElementById("alert").innerHTML = "<p>Oops! Something went wrong.</p>"
          console.log("failure");
          console.log(xhr.status);
        }
      };
      // send ajax
      xhr.send(JSON.stringify(link));
    })
  </script>
</html>
